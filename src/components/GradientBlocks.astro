---

const blocks = [
      { opacity: 0.2, width: 1 },
      { opacity: 0.3, width: 1.5 },
      { opacity: 0.4, width: 0.8 },
      { opacity: 0.5, width: 1.2 },
      { opacity: 0.6, width: 0.7 },
      { opacity: 0.7, width: 1.3 },
      { opacity: 0.8, width: 0.9 },
      { opacity: 0.9, width: 1.1 },
      { opacity: 1.0, width: 1 },
    ]
const totalWidth = blocks.reduce((sum, block) => sum + block.width, 0);

---
  
      <div class="flex flex-col md:flex-row w-full max-w-5xl mx-auto p-4 h-[300px]">
        {/* Gradient blocks with varying widths */}
        <div class="flex h-[300px] flex-1 md:mr-4">
          {blocks.map((block, index) => (
            <div
              class="h-full"
              style={{
                backgroundColor: `#812ae4`,
                opacity: block.opacity,
                width: `${(block.width / totalWidth) * 100}%`,
              }}
            />
          ))}
        </div>
  
        {/* Square image */}
        <div class="w-full md:w-[300px] h-[300px] flex-shrink-0 mt-4 md:mt-0">
          <img
            src="https://ik.imagekit.io/thepaulin/profile.4b2bbc9a463700b9bf98.png?updatedAt=1733003668030"
            alt="Square image"
            width={300}
            height={300}
            class="h-full w-full object-cover"
          />
        </div>
      </div>
